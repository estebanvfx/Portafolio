---
import Card from '../components/Card2.astro'

import Layout from "../layouts/Layout.astro"
import NavBar from '../components/nav-bar.astro'
import CardProjects from "../components/card-projects.astro"
---

<Layout title='Projects'>
    <NavBar/>
    <div class="container mx-auto h-screen w-full px-6 md:px-8 lg:px-12">
        <div class="w-full h-auto mt-40 mb-10 bg-red-500/0">
            <div class="flex flex-col items-center">
                <img src="https://media.tenor.com/exuPwTTU-FwAAAAC/key-click-typing.gif" alt="" height="32px" width="400px" >
                <h1 class=" text-center font-medium text-3xl text-white">Discover some of my projects</h1>
            </div>
        </div>
        <div class="grid grid-cols-3 gap-4">
            <CardProjects/>
        </div>

    </div>
    
    

      
</Layout>

